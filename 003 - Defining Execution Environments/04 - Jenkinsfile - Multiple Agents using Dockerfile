pipeline {
    agent none
    stages {
        stage('build java') {
            agent { 
                dockerfile { 
                    filename '03 - Dockerfile - Install Software Dockerfile'
		    dir '003 - Defining Execution Environments'
                } 
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('build node') {
            agent { 
                dockerfile { 
                    filename 'maven'
		    dir '003 - Defining Execution Environments' 
                } 
            }
            steps {
                sh 'npm --version'
            }
        }
    }
}
