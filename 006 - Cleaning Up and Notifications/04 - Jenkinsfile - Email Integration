pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
		    script {
				GIT_COMMIT_EMAIL = sh (
					script: 'ls -ltr',
					returnStdout: true
				).trim()
			}
            }
        }
    }
    post{
    	sendEMAIL()
    }
}

sendEMAIL(){
	def file = readFile("maintenance.txt")
	emailext body: file,
		subject: 'Test Subject',
		to: 'nb25292@novabase.pt'
}
