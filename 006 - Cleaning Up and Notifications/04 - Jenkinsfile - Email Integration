pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
		    script {
				GIT_COMMIT_EMAIL = sh (
					script: 'ls -ltr',
					returnStdout: true
				).trim()
			}
            }
        }
    }
    post{
    	success{
    		sendEMAIL()
	}
    }
}

def sendEMAIL(){
	def file = readFile("maintenance.html")
	def newFile = file.replace("REPLACE_PLACE_HOLDER","TESTE")
	emailext body: newFile,
		subject: 'Test Subject',
		to: 'nb25292@novabase.pt'
}
