pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
		    script {
				GIT_COMMIT_EMAIL = sh (
					script: 'ls -ltr',
					returnStdout: true
				).trim()
			}
            }
        }
    }
    post{
    	always{
		emailext body: "Test Message  ${GIT_COMMIT_EMAIL}",
		subject: 'Test Subject',
		to: 'nb25292@novabase.pt'
	}
    }
}
