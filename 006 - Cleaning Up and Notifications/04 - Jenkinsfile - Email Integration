pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
		    script {
				GIT_COMMIT_EMAIL = sh (
					script: 'ls -ltr',
					returnStdout: true
				).trim()
				FILE = readFile("006 - Cleaning Up and Notifications/maintenance.txt")
			}
            }
        }
    }
    post{
    	always{
		emailext body: "${FILE}",
		subject: 'Test Subject',
		to: 'nb25292@novabase.pt'
	}
    }
}
